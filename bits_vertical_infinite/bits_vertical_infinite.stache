{{#if showNewDataNotice}}
  <div class="new-data-notice">New data was added! <span class="scroll-to-top">Scroll to top to see it.</span></div>
{{/if}}

<div class="column-wrapper clearfix columns-{{columnCount}}">
	{{#each columns}}
		<div class="column">
			{{#each this}}
        <bh-bit state="{../../state}" bit="{this}"></bh-bit>
			{{/each}}
		</div>
	{{/each}}
</div>
{{#if isLoading}}
	<div class="loader">
		<i class="fa-circle-o-notch fa fa-spin"></i>
	</div>
{{/if}}
